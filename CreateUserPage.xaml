<Page x:Class="ServiceWPF.CreateUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Создание пользователя"
      Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20,20,20,40">
            <TextBlock Text="Создание нового пользователя"
                     FontSize="20"
                     FontWeight="Medium"
                     Margin="0,0,0,20"/>

            <!-- Логин -->
            <TextBlock Text="Логин *"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="LoginBox"
                    Height="35"
                    Padding="10,0"
                    VerticalContentAlignment="Center"
                    Margin="0,0,0,15"/>

            <!-- Email -->
            <TextBlock Text="Email *"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="EmailBox"
                    Height="35"
                    Padding="10,0"
                    VerticalContentAlignment="Center"
                    Margin="0,0,0,15"/>

            <!-- Фамилия -->
            <TextBlock Text="Фамилия *"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="LastNameBox"
                    Height="35"
                    Padding="10,0"
                    VerticalContentAlignment="Center"
                    Margin="0,0,0,15"/>

            <!-- Имя -->
            <TextBlock Text="Имя *"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="FirstNameBox"
                    Height="35"
                    Padding="10,0"
                    VerticalContentAlignment="Center"
                    Margin="0,0,0,15"/>

            <!-- Отчество -->
            <TextBlock Text="Отчество"
                     Margin="0,0,0,5"/>
            <TextBox x:Name="MiddleNameBox"
                    Height="35"
                    Padding="10,0"
                    VerticalContentAlignment="Center"
                    Margin="0,0,0,15"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль *"
                     Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                        Height="35"
                        Padding="10,0"
                        VerticalContentAlignment="Center"
                        Margin="0,0,0,15"/>

            <!-- Подтверждение пароля -->
            <TextBlock Text="Подтверждение пароля *"
                     Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox"
                        Height="35"
                        Padding="10,0"
                        VerticalContentAlignment="Center"
                        Margin="0,0,0,15"/>

            <!-- Роль -->
            <TextBlock Text="Роль *"
                     Margin="0,0,0,5"/>
            <ComboBox x:Name="RoleComboBox"
                     Height="35"
                     Padding="10,0"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,25">
                <ComboBoxItem Content="Администратор"/>
                <ComboBoxItem Content="Исполнитель"/>
                <ComboBoxItem Content="Пользователь"/>
            </ComboBox>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,20">
                <Button Content="Отмена"
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"/>
                <Button Content="Сохранить"
                        Width="100"
                        Height="35"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page> 