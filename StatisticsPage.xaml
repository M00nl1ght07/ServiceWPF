<Page x:Class="ServiceWPF.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Статистика"
      Background="White">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Общая статистика -->
            <TextBlock Text="Общая статистика"
                     FontSize="24"
                     FontWeight="Medium"
                     Margin="0,0,0,20"/>

            <WrapPanel>
                <!-- Всего заявок -->
                <Border Background="#E3F2FD"
                        Padding="20"
                        CornerRadius="4"
                        Margin="0,0,20,20"
                        Width="200">
                    <StackPanel>
                        <TextBlock Text="Всего заявок"
                                 FontWeight="Medium"/>
                        <TextBlock x:Name="TotalRequestsCount"
                                 Text="0"
                                 FontSize="24"
                                 FontWeight="Medium"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Среднее время выполнения -->
                <Border Background="#E8F5E9"
                        Padding="20"
                        CornerRadius="4"
                        Margin="0,0,20,20"
                        Width="200">
                    <StackPanel>
                        <TextBlock Text="Среднее время"
                                 FontWeight="Medium"/>
                        <TextBlock x:Name="AverageCompletionTime"
                                 Text="0 часов"
                                 FontSize="24"
                                 FontWeight="Medium"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Статистика по статусам -->
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#EEEEEE"
                    CornerRadius="4"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Статистика по статусам"
                             FontSize="20"
                             FontWeight="Medium"
                             Margin="0,0,0,15"/>

                    <ItemsControl x:Name="StatusStatsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA"
                                        Margin="0,5"
                                        CornerRadius="4"
                                        Padding="15,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Status}"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Count}"
                                                 Grid.Column="1"
                                                 FontWeight="Medium"
                                                 FontSize="16"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Статистика по приоритетам -->
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#EEEEEE"
                    CornerRadius="4"
                    Padding="20"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Статистика по приоритетам"
                             FontSize="20"
                             FontWeight="Medium"
                             Margin="0,0,0,15"/>

                    <ItemsControl x:Name="PriorityStatsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA"
                                        Margin="0,5"
                                        CornerRadius="4"
                                        Padding="15,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Priority}"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Count}"
                                                 Grid.Column="1"
                                                 FontWeight="Medium"
                                                 FontSize="16"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Топ исполнителей -->
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#EEEEEE"
                    CornerRadius="4"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Топ исполнителей"
                             FontSize="20"
                             FontWeight="Medium"
                             Margin="0,0,0,15"/>

                    <ItemsControl x:Name="TopExecutorsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFAFA"
                                        Margin="0,5"
                                        CornerRadius="4"
                                        Padding="15,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}"
                                                 VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1"
                                                  Orientation="Horizontal">
                                            <TextBlock Text="{Binding CompletedCount}"
                                                     FontWeight="Medium"
                                                     FontSize="16"/>
                                            <TextBlock Text=" выполнено"
                                                     Margin="5,0,0,0"
                                                     Foreground="#757575"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>