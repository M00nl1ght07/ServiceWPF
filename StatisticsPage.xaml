<Page x:Class="ServiceWPF.StatisticsPage"

      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"

      Title="Статистика"

      Background="White">



    <ScrollViewer>

        <StackPanel Margin="0,0,20,0">

            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Общая статистика"
                         FontSize="24"
                         FontWeight="Medium"/>
                         
                <Button Grid.Column="1"
                        Content="Экспорт в Excel"
                        Click="ExportToExcel_Click"
                        Padding="15,8"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"/>
            </Grid>



            <!-- Общие показатели -->

            <WrapPanel Margin="0,0,0,30" 
                       HorizontalAlignment="Left">

                <!-- Всего заявок -->

                <Border Background="#E3F2FD" 
                        CornerRadius="8" 
                        Padding="20" 
                        Width="180"
                        Height="130"
                        Margin="0,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Всего заявок"
                                 FontSize="16"
                                 VerticalAlignment="Top"/>
                        <TextBlock x:Name="TotalRequestsCount"
                                 Text="0"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Grid.Row="1"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>



                <!-- Среднее время -->

                <Border Background="#E8F5E9" 
                        CornerRadius="8" 
                        Padding="20" 
                        Width="180"
                        Height="130"
                        Margin="0,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Среднее время"
                                 FontSize="16"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Top"/>
                        <TextBlock x:Name="AverageCompletionTime"
                                 Text="0 ч."
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Grid.Row="1"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>



                <!-- Заявок в работе -->

                <Border Background="#FFF3E0" 
                        CornerRadius="8" 
                        Padding="20" 
                        Width="180"
                        Height="130"
                        Margin="0,0,15,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Заявок в работе"
                                 FontSize="16"
                                 VerticalAlignment="Top"/>
                        <TextBlock x:Name="ActiveRequestsCount"
                                 Text="0"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Grid.Row="1"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>



                <!-- Завершено за неделю -->

                <Border Background="#E1F5FE" 
                        CornerRadius="8" 
                        Padding="20" 
                        Width="180"
                        Height="130"
                        Margin="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Завершено за нед."
                                 FontSize="16"
                                 TextWrapping="Wrap"
                                 VerticalAlignment="Top"/>
                        <TextBlock x:Name="CompletedThisWeek"
                                 Text="0"
                                 FontSize="32"
                                 FontWeight="Bold"
                                 Grid.Row="1"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>

            </WrapPanel>



            <!-- Статистика по статусам -->

            <TextBlock Text="Статистика по статусам"

                     FontSize="20"

                     FontWeight="Medium"

                     Margin="0,0,0,20"/>



            <Grid Height="300" Margin="0,0,0,40">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition/>

                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>



                <!-- Круговая диаграмма статусов -->

                <lvc:PieChart x:Name="StatusPieChart"

                            LegendLocation="Right"

                            DataTooltip="{x:Null}">

                    <lvc:PieChart.ChartLegend>

                        <lvc:DefaultLegend BulletSize="15"/>

                    </lvc:PieChart.ChartLegend>

                </lvc:PieChart>



                <!-- Столбчатая диаграмма статусов -->

                <lvc:CartesianChart Grid.Column="1" 

                                  x:Name="StatusBarChart"

                                  Margin="0,10,0,40">

                    <lvc:CartesianChart.AxisX>

                        <lvc:Axis Title="Статус" 

                                 FontSize="14">

                            <lvc:Axis.Separator>

                                <lvc:Separator Step="1"/>

                            </lvc:Axis.Separator>

                            <lvc:Axis.LabelsRotation>-45</lvc:Axis.LabelsRotation>

                        </lvc:Axis>

                    </lvc:CartesianChart.AxisX>

                    <lvc:CartesianChart.AxisY>

                        <lvc:Axis Title="Количество" 

                                 FontSize="14"/>

                    </lvc:CartesianChart.AxisY>

                </lvc:CartesianChart>

            </Grid>



            <!-- Статистика по приоритетам -->

            <TextBlock Text="Статистика по приоритетам"

                     FontSize="20"

                     FontWeight="Medium"

                     Margin="0,0,0,20"/>



            <lvc:CartesianChart Height="300" 

                               x:Name="PriorityBarChart"

                               Margin="0,0,0,40">

                <lvc:CartesianChart.AxisX>

                    <lvc:Axis Title="Приоритет" 

                             FontSize="14"/>

                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>

                    <lvc:Axis Title="Количество" 

                             FontSize="14"/>

                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>



            <!-- Статистика по исполнителям -->

            <TextBlock Text="Эффективность исполнителей"

                     FontSize="20"

                     FontWeight="Medium"

                     Margin="0,0,0,20"/>



            <lvc:CartesianChart Height="300" 

                               x:Name="ExecutorsChart"

                               Margin="0,0,0,40">

                <lvc:CartesianChart.AxisX>

                    <lvc:Axis Title="Исполнитель" 

                             FontSize="14"/>

                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>

                    <lvc:Axis Title="Выполнено заявок" 

                             FontSize="14"/>

                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>



            <!-- График времени выполнения -->

            <TextBlock Text="Среднее время выполнения по приоритетам"

                     FontSize="20"

                     FontWeight="Medium"

                     Margin="0,0,0,20"/>



            <lvc:CartesianChart Height="300" 

                               x:Name="CompletionTimeChart"

                               Margin="0,0,0,40">

                <lvc:CartesianChart.AxisX>

                    <lvc:Axis Title="Приоритет" 

                             FontSize="14"/>

                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY>

                    <lvc:Axis Title="Среднее время (часы)" 

                             FontSize="14"/>

                </lvc:CartesianChart.AxisY>

            </lvc:CartesianChart>

        </StackPanel>

    </ScrollViewer>

</Page>
