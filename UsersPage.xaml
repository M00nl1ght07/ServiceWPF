<Page x:Class="ServiceWPF.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Пользователи"
      Background="White">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Панель поиска и добавления -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Поиск -->
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0"
                    CornerRadius="4"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍"
                             Margin="10,0"
                             VerticalAlignment="Center"
                             Foreground="#757575"/>
                    <TextBox Grid.Column="1"
                            BorderThickness="0"
                            Padding="0,8"
                            Background="Transparent"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            x:Name="SearchBox"
                            TextChanged="SearchBox_TextChanged"/>
                </Grid>
            </Border>
            
            <!-- Кнопка создания пользователя -->
            <Button Grid.Column="1"
                    Content="Создать пользователя"
                    Height="35"
                    Padding="15,0"
                    Click="CreateUser_Click"
                    Style="{StaticResource PrimaryButton}"/>
        </Grid>

        <!-- Список пользователей -->
        <Border Grid.Row="1" 
                BorderThickness="1"
                BorderBrush="#E0E0E0"
                Background="White"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled"
                         Margin="0,0,8,0">
                <ListView x:Name="UsersList"
                         BorderThickness="0"
                         Background="White"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="0,0,0,1"
                                    BorderBrush="#E0E0E0"
                                    Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding FullName}"
                                                 FontWeight="Medium"/>
                                        <TextBlock Text="{Binding Login}"
                                                 Foreground="#757575"
                                                 FontSize="14"/>
                                        <TextBlock Text="{Binding Role}"
                                                 Foreground="#757575"
                                                 FontSize="14"/>
                                        <TextBlock Text="{Binding RatingInfo}"
                                                 Foreground="#FFC107"
                                                 FontSize="14"
                                                 Visibility="{Binding IsExecutor, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>

                                    <Button Grid.Column="1"
                                            Content="Изменить"
                                            Click="EditUser_Click"
                                            Tag="{Binding Login}"
                                            Style="{StaticResource PrimaryButton}"
                                            Margin="0,0,10,0"/>

                                    <Button Grid.Column="2"
                                            Content="Удалить"
                                            Click="DeleteUser_Click"
                                            Tag="{Binding Login}"
                                            Style="{StaticResource DangerButton}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Border>
    </Grid>
</Page> 