<Page x:Class="ServiceWPF.EditUserWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      Title="Редактирование пользователя"
      Background="White">

    <StackPanel Margin="20">
        <TextBlock Text="Редактирование пользователя"
                 FontSize="20"
                 FontWeight="Medium"
                 Margin="0,0,0,20"/>

        <!-- Фамилия -->
        <TextBlock Text="Фамилия"
                 Margin="0,0,0,5"/>
        <TextBox x:Name="LastNameBox"
                Height="35"
                Padding="10,0"
                VerticalContentAlignment="Center"
                Margin="0,0,0,15"/>

        <!-- Имя -->
        <TextBlock Text="Имя"
                 Margin="0,0,0,5"/>
        <TextBox x:Name="FirstNameBox"
                Height="35"
                Padding="10,0"
                VerticalContentAlignment="Center"
                Margin="0,0,0,15"/>

        <!-- Отчество -->
        <TextBlock Text="Отчество"
                 Margin="0,0,0,5"/>
        <TextBox x:Name="MiddleNameBox"
                Height="35"
                Padding="10,0"
                VerticalContentAlignment="Center"
                Margin="0,0,0,15"/>

        <!-- Логин -->
        <TextBlock Text="Логин"
                 Margin="0,0,0,5"/>
        <TextBox x:Name="LoginBox"
                Height="35"
                Padding="10,0"
                VerticalContentAlignment="Center"
                Margin="0,0,0,15"/>

        <!-- Роль -->
        <TextBlock Text="Роль"
                 Margin="0,0,0,5"/>
        <ComboBox x:Name="RoleComboBox"
                 Height="35"
                 Padding="10,0"
                 VerticalContentAlignment="Center"
                 Margin="0,0,0,15">
            <ComboBoxItem Content="Admin" Tag="1"/>
            <ComboBoxItem Content="Executor" Tag="2"/>
            <ComboBoxItem Content="User" Tag="3"/>
        </ComboBox>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Отмена"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Сохранить"
                    Width="100"
                    Height="35"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </StackPanel>
</Page>
