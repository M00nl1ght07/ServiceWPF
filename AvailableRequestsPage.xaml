<Page x:Class="ServiceWPF.AvailableRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Доступные заявки"
      Background="White">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Панель фильтров и поиска -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Поиск -->
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0"
                    CornerRadius="4"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔍"
                             Margin="10,0"
                             VerticalAlignment="Center"
                             Foreground="#757575"/>
                    <TextBox Grid.Column="1"
                            BorderThickness="0"
                            Padding="0,8"
                            Background="Transparent"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            x:Name="SearchBox"
                            TextChanged="SearchBox_TextChanged"/>
                </Grid>
            </Border>

            <!-- Фильтры -->
            <ComboBox Grid.Column="1"
                      Width="150"
                      x:Name="PriorityFilter"
                      Background="White"
                      SelectionChanged="PriorityFilter_SelectionChanged">
                <ComboBoxItem Content="Все приоритеты"/>
                <ComboBoxItem Content="Высокий"/>
                <ComboBoxItem Content="Средний"/>
                <ComboBoxItem Content="Низкий"/>
            </ComboBox>
        </Grid>

        <!-- Список заявок -->
        <Border Grid.Row="1" 
                BorderThickness="1"
                BorderBrush="#E0E0E0"
                Background="White"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled"
                         Margin="0,0,8,0">
                <ListView x:Name="RequestsList"
                         BorderThickness="0"
                         Background="White"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="15"
                                    Background="Transparent"
                                    BorderThickness="0,0,0,1"
                                    BorderBrush="#E0E0E0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Основная информация -->
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}"
                                                 FontSize="16"
                                                 FontWeight="Medium"/>
                                        <TextBlock Text="{Binding Description}"
                                                 Margin="0,5"
                                                 TextWrapping="Wrap"
                                                 Foreground="#757575"/>
                                        <StackPanel Orientation="Horizontal"
                                                  Margin="0,5,0,0">
                                            <TextBlock Text="{Binding CreatedDate}"
                                                     Foreground="#757575"/>
                                            <TextBlock Text=" • "
                                                     Foreground="#757575"/>
                                            <TextBlock Text="{Binding Priority}"
                                                     Foreground="#F57C00"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Кнопка "Взять в работу" -->
                                    <Button Grid.Column="1"
                                            Content="Взять в работу"
                                            Height="35"
                                            Padding="15,0"
                                            Margin="20,0,0,0"
                                            Click="TakeRequest_Click"
                                            Tag="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>