<Page x:Class="ServiceWPF.RequestDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Детали заявки"
      Background="White">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Кнопка назад -->
        <Button Content="← Назад"
                Height="35"
                Padding="15,0"
                HorizontalAlignment="Left"
                Margin="0,0,0,20"
                Background="Transparent"
                Foreground="#2196F3"
                BorderThickness="0"
                Click="BackButton_Click"
                Cursor="Hand"/>

        <!-- Шапка с основной информацией -->
        <StackPanel Grid.Row="1">
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок и статус -->
                <StackPanel>
                    <TextBlock x:Name="TitleTextBlock"
                             Text="Не работает принтер"
                             FontSize="24"
                             FontWeight="Medium"/>
                    <StackPanel Orientation="Horizontal"
                              Margin="0,10,0,0">
                        <TextBlock Text="Создана: "
                                 Foreground="#757575"/>
                        <TextBlock x:Name="CreatedDateTextBlock"
                                 Text="15.03.2024"
                                 Foreground="#757575"/>
                        <TextBlock Text=" • "
                                 Foreground="#757575"
                                 Margin="5,0"/>
                        <TextBlock x:Name="StatusTextBlock"
                                 Text="В работе"
                                 Foreground="#2196F3"/>
                        <TextBlock Text=" • "
                                 Foreground="#757575"
                                 Margin="5,0"/>
                        <TextBlock Text="Исполнитель: "
                                 Foreground="#757575"/>
                        <TextBlock x:Name="ExecutorTextBlock"
                                 Text="Не назначен"
                                 Foreground="#2196F3"/>
                    </StackPanel>
                </StackPanel>

                <!-- Приоритет -->
                <Border Grid.Column="1"
                        Background="#FFF3E0"
                        Padding="12,6"
                        CornerRadius="4">
                    <TextBlock x:Name="PriorityTextBlock"
                             Text="Высокий"
                             Foreground="#F57C00"/>
                </Border>
            </Grid>

            <!-- Описание -->
            <TextBlock Text="Описание"
                     FontSize="16"
                     FontWeight="Medium"
                     Margin="0,0,0,10"/>
            <TextBlock x:Name="DescriptionTextBlock"
                     Text="Принтер HP в кабинете 405 не печатает документы. При отправке на печать появляется ошибка."
                     TextWrapping="Wrap"
                     Foreground="#757575"
                     Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Создал: "/>
                <TextBlock x:Name="CreatedByTextBlock" Text=""/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Дата завершения: "/>
                <TextBlock x:Name="CompletionDateTextBlock" Text=""/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Последнее изменение: "/>
                <TextBlock x:Name="LastModifiedDateTextBlock" Text=""/>
            </StackPanel>

            <!-- Добавьте после информации о заявке -->
            <Button x:Name="LeaveReviewButton"
                    Content="Оставить отзыв"
                    Height="35"
                    Width="150"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,20"
                    Click="LeaveReview_Click"
                    Visibility="Collapsed"/>
        </StackPanel>

        <!-- История и комментарии -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- История изменений -->
            <DockPanel Margin="0,0,20,0">
                <TextBlock Text="История изменений"
                         FontSize="16"
                         FontWeight="Medium"
                         Margin="0,0,0,15"
                         DockPanel.Dock="Top"/>
                
                <ScrollViewer Grid.Row="1" 
                              Margin="0,20,0,0"
                              VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Resources>
                        <Style TargetType="ScrollBar">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid>
                                            <Track Name="PART_Track" 
                                                   IsDirectionReversed="True">
                                                <Track.DecreaseRepeatButton>
                                                    <RepeatButton Command="ScrollBar.PageUpCommand" 
                                                                Opacity="0"/>
                                                </Track.DecreaseRepeatButton>
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border Background="#BDBDBD"
                                                                        CornerRadius="4"/>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                                <Track.IncreaseRepeatButton>
                                                    <RepeatButton Command="ScrollBar.PageDownCommand" 
                                                                Opacity="0"/>
                                                </Track.IncreaseRepeatButton>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    
                    <ItemsControl x:Name="HistoryList" 
                                 BorderThickness="0"
                                 Background="Transparent">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="#E0E0E0"
                                        Background="Transparent">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Comment}"
                                                 TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal"
                                                  Margin="0,5,0,0">
                                            <TextBlock Text="{Binding ChangeDate}"
                                                     Foreground="#757575"/>
                                            <TextBlock Text=" • "
                                                     Foreground="#757575"
                                                     Margin="5,0"/>
                                            <TextBlock Text="{Binding ChangedBy}"
                                                     Foreground="#2196F3"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>

            <!-- Комментарии -->
            <DockPanel Grid.Column="1">
                <TextBlock Text="Комментарии"
                         FontSize="16"
                         FontWeight="Medium"
                         Margin="0,0,0,15"
                         DockPanel.Dock="Top"/>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,15,0,0">
                    <!-- Добавление комментария -->
                    <Border Background="White"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            CornerRadius="4">
                        <TextBox x:Name="CommentBox"
                                BorderThickness="0"
                                Padding="12"
                                Background="Transparent"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Height="80"
                                VerticalScrollBarVisibility="Auto"/>
                    </Border>
                    <Button Content="Добавить комментарий"
                            Height="35"
                            Width="200"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0"
                            Click="AddComment_Click"/>
                </StackPanel>

                <!-- Список комментариев -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="CommentsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,0,0,1"
                                        BorderBrush="#E0E0E0"
                                        Padding="12,15"
                                        Background="Transparent">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Author}"
                                                 FontWeight="Medium"/>
                                        <TextBlock Text="{Binding Text}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,5"/>
                                        <TextBlock Text="{Binding Date}"
                                                 Foreground="#757575"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </Grid>
</Page>