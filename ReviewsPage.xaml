<Page x:Class="ServiceWPF.ReviewsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:ServiceWPF.Converters"
      Title="Отзывы"
      Background="White">

    <Page.Resources>
        <converters:AdminViewConverter x:Key="AdminViewConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Отзывы"
                 FontSize="24"
                 FontWeight="Medium"
                 Margin="0,0,0,20"/>

        <!-- Информация о рейтинге -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal"
                    Margin="0,0,0,20">
            <TextBlock Text="Средний рейтинг: "
                     FontSize="16"/>
            <TextBlock x:Name="AverageRatingText"
                     Text="4.5"
                     FontSize="16"
                     FontWeight="Medium"/>
            <TextBlock Text=" из 5"
                     FontSize="16"
                     Margin="0,0,20,0"/>
            <TextBlock Text="Всего отзывов: "
                     FontSize="16"/>
            <TextBlock x:Name="TotalReviewsText"
                     Text="42"
                     FontSize="16"
                     FontWeight="Medium"/>
        </StackPanel>

        <!-- Список отзывов -->
        <ScrollViewer Grid.Row="2"
                     VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ReviewsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0,0,0,1"
                                BorderBrush="#E0E0E0"
                                Padding="15"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Заголовок заявки и дата -->
                                <DockPanel Grid.Row="0">
                                    <StackPanel>
                                        <!-- Для админа показываем мастера -->
                                        <TextBlock FontWeight="Medium"
                                                  TextWrapping="Wrap"
                                                  Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Run Text="Мастер: "/>
                                            <Run Text="{Binding ExecutorName}"/>
                                        </TextBlock>
                                        
                                        <!-- Информация о заявке -->
                                        <TextBlock Text="{Binding RequestInfo}"
                                                  FontWeight="Medium"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="{Binding CreatedDate}"
                                               Foreground="#757575"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="10,0,0,0"/>
                                </DockPanel>

                                <!-- Автор отзыва -->
                                <TextBlock Grid.Row="1"
                                           Text="{Binding Author}"
                                           Foreground="#757575"
                                           Margin="0,5,0,0"/>

                                <!-- Рейтинг -->
                                <StackPanel Grid.Row="2" 
                                          Orientation="Horizontal"
                                          Margin="0,5">
                                    <ItemsControl ItemsSource="{Binding Stars}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="★"
                                                         FontSize="20"
                                                         Foreground="{Binding}"
                                                         Margin="0,0,2,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!-- Комментарий -->
                                <TextBlock Grid.Row="3"
                                         Text="{Binding Comment}"
                                         TextWrapping="Wrap"
                                         Margin="0,5,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
