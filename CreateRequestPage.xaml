<Page x:Class="ServiceWPF.CreateRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServiceWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Создание заявки"
      Background="White">

    <Grid Margin="0">
        <StackPanel>
            <!-- Заголовок заявки -->
            <TextBlock Text="Заголовок"
                     FontSize="14"
                     Foreground="#757575"
                     Margin="0,0,0,8"/>
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0"
                    CornerRadius="4"
                    Margin="0,0,0,20">
                <TextBox x:Name="TitleTextBox"
                        BorderThickness="0"
                        Padding="12"
                        Background="Transparent"/>
            </Border>

            <!-- Описание проблемы -->
            <TextBlock Text="Описание проблемы"
                     FontSize="14"
                     Foreground="#757575"
                     Margin="0,0,0,8"/>
            <Border Background="White"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0"
                    CornerRadius="4"
                    Margin="0,0,0,20">
                <TextBox x:Name="DescriptionTextBox"
                        BorderThickness="0"
                        Padding="12"
                        Background="Transparent"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        Height="150"
                        VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Приоритет -->
            <TextBlock Text="Приоритет"
                     FontSize="14"
                     Foreground="#757575"
                     Margin="0,0,0,8"/>
            <ComboBox x:Name="PriorityComboBox"
                     Width="150"
                     Height="35"
                     HorizontalAlignment="Left"
                     Margin="0,0,0,30">
                <ComboBoxItem Content="Низкий"/>
                <ComboBoxItem Content="Средний"/>
                <ComboBoxItem Content="Высокий"/>
            </ComboBox>

            <!-- Кнопка отправки -->
            <Button Content="Отправить заявку"
                    Height="45"
                    Width="200"
                    HorizontalAlignment="Left"
                    Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
