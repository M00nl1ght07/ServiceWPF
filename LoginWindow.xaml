<Window x:Class="ServiceWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="800" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <TextBlock Text="×"
                                     Foreground="{TemplateBinding Foreground}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1AFF0000"/>
                                <Setter Property="Foreground" Value="#FF0000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="TabRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="Transparent"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,0,10"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid MouseDown="Grid_MouseDown">
        <Border Background="White" 
                CornerRadius="10" 
                Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!-- Верхняя панель с кнопкой закрытия -->
                <Grid>
                    <Button Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"/>
                </Grid>
                
                <!-- ScrollViewer с основным контентом -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Margin="0,0,8,0">
                    <StackPanel Margin="50,0,50,50">
                        <Image Source="/images/logo.png" 
                               Width="120" 
                               Height="120"
                               Margin="0,0,0,25"/>
                        
            <TextBlock Text="Авторизация" 
                       FontSize="24" 
                                  FontWeight="Medium"
                       HorizontalAlignment="Center"
                                  Margin="0,0,0,30"/>

                        <!-- Переключатель режимов -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            
                            <RadioButton x:Name="LoginTab" 
                                       Content="Вход" 
                                       Style="{StaticResource TabRadioButtonStyle}"
                                       IsChecked="True"
                                       Grid.ColumnSpan="2"/>
                        </Grid>

                        <!-- Содержимое для входа -->
                        <StackPanel x:Name="LoginContent">
                            <!-- Поле для логина -->
                            <Border BorderThickness="0,0,0,1" 
                                    BorderBrush="#E0E0E0" 
                                    Margin="0,0,0,20">
                                <Grid>
            <TextBox x:Name="UsernameTextBox"
                                            FontSize="16"
                                            BorderThickness="0"
                                            Padding="5,10"
                                            Background="Transparent"/>
                                    <TextBlock IsHitTestVisible="False"
                                             Text="Введите логин"
                                             VerticalAlignment="Center"
                                             Margin="5,0,0,0"
                                             FontSize="16"
                                             Foreground="#BDBDBD">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=UsernameTextBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>

                            <!-- Поле для пароля -->
                            <Border BorderThickness="0,0,0,1" 
                                    BorderBrush="#E0E0E0" 
                                    Margin="0,0,0,30">
                                <Grid>
            <PasswordBox x:Name="PasswordBox"
                                               FontSize="16"
                                               BorderThickness="0"
                                               Padding="5,10"
                                               Background="Transparent"/>
                                    <TextBlock x:Name="PasswordHint"
                                             IsHitTestVisible="False"
                                             Text="Введите пароль"
                                             VerticalAlignment="Center"
                                             Margin="5,0,0,0"
                                             FontSize="16"
                                             Foreground="#BDBDBD"/>
                                </Grid>
                            </Border>

                            <!-- Кнопки входа -->
            <Button Content="Войти"
                                    Height="50"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Background="#2196F3"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="LoginButton_Click"
                                    Margin="0,0,0,15"
                                    Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="25"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- Скрытая кнопка перехода к регистрации -->
                            <Button x:Name="SwitchToRegisterButton"
                                    Content="Нет аккаунта? Зарегистрироваться"
                                    Visibility="Collapsed"
                                    Height="50"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Background="Transparent"
                                    Foreground="#2196F3"
                                    BorderThickness="2"
                                    BorderBrush="#2196F3"
                                    Click="SwitchToRegister_Click"
                                    Margin="0,0,0,20"
                                    Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="25"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Отдельный Grid для уведомлений поверх всего -->
        <Grid x:Name="NotificationGrid" 
              Panel.ZIndex="9999"
              HorizontalAlignment="Center"
              VerticalAlignment="Top"
              Margin="0,20,0,0"/>
    </Grid>
</Window>